{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES7",
      "ScriptHost"
    ],
    "module": "commonjs",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
